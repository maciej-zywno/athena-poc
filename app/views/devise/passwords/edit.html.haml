.login-container.animate-panel
  .row
    .col-md-12
      .text-center.m-b-md
        %h3 Change your password
        %small Please fill the form to change your password
      .hpanel
        .panel-body
          = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|

            = f.input :password, placeholder: '******', required: true
            = f.input :password_confirmation, placeholder: '******', required: true
            = f.hidden_field :reset_password_token

            = f.submit 'Change my password', class: 'btn btn-success btn-block'

