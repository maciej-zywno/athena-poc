.login-container.animate-panel
  .row
    .col-md-12
      .text-center.m-b-md
        %h3 Sign up
        %small Please fill the form to create new account
      .hpanel
        .panel-body
          = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|

            = f.input :name, placeholder: 'Name', required: true
            = f.input :email, placeholder: 'example@gmail.com', required: true
            = f.input :password, placeholder: '******', required: true
            = f.input :password_confirmation, placeholder: '******', required: true
            = f.hidden_field :role, { value: 'admin' }

            = render 'devise/shared/hidden_fields'

            = f.submit 'Sign up', class: 'btn btn-success btn-block'

            %br/

            = link_to 'Already have an account?', new_session_path(resource_name, client_id: params[:client_id], state: params[:state], response_type: params[:response_type]), class: 'btn btn-default btn-block'
