= content_for :header_title do
  = "#{@treatment.id} #{@treatment.problem}"

%table.table.table-striped
  %thead
    %tr
      %th ID
      %th Question
  %tbody
    - @treatment.questions.each do |question|
      = render 'questions/question', question: question

%table.table.table-striped
  %thead
    %tr
      %th ID
      %th Date
      %th Question
      %th Answer
      %th Alchemy - Keywords
      %th Alchemy - Sentiment
  %tbody
    - @treatment.answers.each do |answer|
      = render 'answers/answer', answer: answer
