!!!
%html
  %head
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %title= content_for?(:title) ? yield(:title) : I18n.t(:application_name)
    %meta{:name => "description", :content => "#{content_for?(:description) ? yield(:description) : I18n.t(:application_name)}"}
    = stylesheet_link_tag 'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags

  %body.blank
    .color-line
    = render 'layouts/messages'
    = yield
    .row
      .col-md-12.text-center
        = render 'layouts/footer'
