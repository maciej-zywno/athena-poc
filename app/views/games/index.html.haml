= content_for :header_title do
  Games

- breadcrumb :games

- if @games.any?
  %table.table.table-striped
    %thead
      %tr
        %th ID
        %th Kid
        %th Parent
        %th Game title
    %tbody
      = render @games

  .pagination_links
    = paginate @games
- else
  = render 'shared/no_records', text: "You didn't have any associated games."
