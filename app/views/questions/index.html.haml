= content_for :header_title do
  = "#{@game.problem} - Questions"

- breadcrumb :questions, @game.id

- if @questions.any?
  %table.table.table-striped
    %thead
      %tr
        %th ID
        %th Question
        %th Answer type
        %th Risk keywords
        %th Low threshold
        %th High threshold
        %th
    %tbody
      = render @questions
- else
  = render 'shared/no_records', text: 'There is no questions for this game.'

%br/
- if policy(@game.questions.build).new?
  = link_to 'New Question', new_game_question_path(@game.id), class: 'btn btn-primary'
