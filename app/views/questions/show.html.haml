= content_for :header_title do
  = "#{@question.id} #{@question.question}"

- if @question.number?
  = line_chart line_chart_data(@question.answers, :answer), options={}
- elsif @question.string?
  = line_chart line_chart_data(@question.answers, :sentiment), options={}
- else
  -# display no chart
%table.table.table-striped
  %thead
    %tr
      %th ID
      %th Date
      %th Question
      %th Answer
      %th Alchemy - Keywords
      %th Alchemy - Sentiment
  %tbody
    - @question.answers.each do |answer|
      = render 'answers/answer', answer: answer
